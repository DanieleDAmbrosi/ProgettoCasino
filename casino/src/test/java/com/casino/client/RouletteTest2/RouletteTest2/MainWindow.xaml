<Window x:Class="RouletteTest2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RouletteTest2"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="image/Roulette.Finish.jpg"/>
        </Grid.Background>
        <Canvas Name="cvsHintergrund">
            <Viewbox Height="1016" Width="1272" Canvas.Left="-502" Canvas.Top="-295">
                <Canvas x:Name="cvsKessel" HorizontalAlignment="Left" Margin="123,348,0,50" VerticalAlignment="Top" Height="250" Width="250" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">

                    <Canvas.Background>
                        <ImageBrush Stretch="None" ImageSource="image/Kessel.png"/>
                    </Canvas.Background>


                    <!--roulette-->
                    <Ellipse x:Name="eliKesselInnere"
                     
            			Canvas.Top="34.008"
            			Canvas.Left="34.167"
            			Height="181.151"
            			Width="181"
            			StrokeThickness="1"
            			Stroke="Black" RenderTransformOrigin="0.497,0.496">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="image/KesselInhalt.png"/>
                        </Ellipse.Fill>

                    </Ellipse>

                    <!--pallina-->
                    <Ellipse x:Name="ball"
            			Canvas.Top="17"
            			Canvas.Left="118"
            			Height="10"
            			Width="10"
            			StrokeThickness="0.5"
            			Stroke="Black" RenderTransformOrigin="0.6,10.6">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="image/Kugel.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Canvas>
            </Viewbox>
            <Image x:Name="StartButton_png" Height="80" Canvas.Left="54" Source="image/StartButton.png" Stretch="Fill" Canvas.Top="774" Width="80" MouseLeftButtonDown="StartButton_png_MouseLeftButtonDown" MouseEnter="StartButton_png_MouseEnter" MouseLeave="StartButton_png_MouseLeave">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="image/StartButton.png"/>
                </Image.OpacityMask>
            </Image>
        </Canvas>

    </Grid>
</Window>
